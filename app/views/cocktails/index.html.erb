<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://419a5ecf000c70751b96-2d268c5dae618615daa5314a1f0f4b99.r77.cf1.rackcdn.com/restaurants-irs/235125/EclipseCocktails1.png'); background-size: cover;">
  <div class="banner-content">
    <h1>Your cocktail library</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-4">
        <%= link_to cocktail_path(cocktail), method: "delete" do %>
        <i id= "delete-cocktail" class="fas fa-times"></i>
        <% end %>
        <%= link_to cocktail_path(cocktail) do %>
        <div class="card" style="background: url('<%= cl_image_path cocktail.photo %>'); background-size: cover;">
          <h3 class="cocktail-name"><%= cocktail.name %></h3>
          <% @doses = cocktail.doses %>
          <ul class="cocktail-ingredients">
            <% @doses.each do |dose| %>
            <li><%= dose.ingredient.name %>: <%= dose.description %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <% if @cocktails.length != Cocktail.all.length %>
    <%= link_to cocktails_path do %>
      <button id="back-btn" class='btn btn-primary'><i class='far fa-arrow-alt-circle-left'></i> Back to list</button>
    <% end %>
  <% end %>
</div>


